@page "/"
@layout TcgWeb.Layout.MainLayout
@using TcgWeb.Models.Dtos
@using TcgWeb.Services
@inject PackService PackService
@inject NavigationManager Navigation

<PageTitle>TCG Market</PageTitle>

<div class="home-container">

    <section class="hero-section">
        <div class="hero-overlay"></div>
        <div class="hero-content">
            <div class="hero-text">
                <span class="hero-badge">The ultimate platform</span>
                <h1>Master the <span class="text-highlight">Pokémon TCG</span> Market</h1>
                <p>
                    Build your ideal deck, uncover hidden rarities, and collect the most valuable cards.
                    Join the global economy of trainers and take your collection to the next level.
                </p>
                <div class="hero-actions">
                    <button class="btn-primary-glow" @onclick="GoToMarket">
                        Explore the Market
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="icon-svg-arrow">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                        </svg>
                    </button>
                </div>
            </div>

            <div class="hero-visual">
                <img src="/Logo.webp" alt="Pokémon TCG Cards" class="hero-image floating-element" />
            </div>
        </div>
    </section>

    <section class="intro-section">
        <div class="intro-header">
            <h2>Step Into the TCG World</h2>
            <div class="header-accent-line"></div>
            <p class="intro-subtitle">A complete experience designed for true collectors and strategists.</p>
        </div>

        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon-wrapper">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
                    </svg>
                </div>
                <h3>Discover Cards</h3>
                <p>Open virtual booster packs and find everything from common cards to the most sought-after rare and secret illustrations in the current meta.</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon-wrapper">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17.593 3.322c1.1.128 1.907 1.077 1.907 2.185V21L12 17.25 4.5 21V5.507c0-1.108.806-2.057 1.907-2.185a48.507 48.507 0 0111.186 0z" />
                    </svg>
                </div>
                <h3>Collect and Organize</h3>
                <p>Manage your finds in a sleek digital album. Track your stats, complete historic sets, and admire your progress.</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon-wrapper">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <h3>Engage in the Market</h3>
                <p>Buy, sell, and trade in a dynamic economy. Find that missing piece for your deck or earn income by selling your duplicate cards.</p>
            </div>
        </div>
    </section>

</div>

@code {
    private void GoToMarket()
    {
        // Redirige directamente a la vista del mercado
        Navigation.NavigateTo("/market");
    }
}